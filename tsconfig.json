{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    // "rootDir": "./src", // Removing rootDir or setting to "." when including tests
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*"], // Include tests
  "exclude": ["node_modules", "dist"] // No longer exclude tests from TS context for Jest
}
